               end;
            4: begin // условие 4
                if(StrToInt(Edit2.Text)<1001)and(StrToInt(Edit2.Text)>0) then Res:=true;
                Memo1.Lines.Add('Усл. 4 : ' + BoolToStr(Res));
               end;
            5: begin // условие 5
                if(ult=true) then Res:=true;
                Memo1.Lines.Add('Усл. 5 : ' + BoolToStr(Res));
               end; 
            6: begin // условие 6
                if(StrToInt(Edit1.Text)=0) then Res:=true;
                Memo1.Lines.Add('Усл. 6 : ' + BoolToStr(Res));
               end;
            7: begin // условие 7
                if(StrToInt(Edit2.Text)=0) then Res:=true;
                Memo1.Lines.Add('Усл. 7 : ' + BoolToStr(Res));
               end;
      end; {case}
      end;
     end; {case}
    end; {условие}

    if message.WParamHi=1 then
    begin
    //Действие!!!!!!!!!!
     case message.WParamLo of
      //таблица 1
      1 : begin
      case message.LParam of
          1: begin // действие 1
              delay(100);
             end;
      end; {case}
      end;

      //таблица 2
      2 : begin
      case message.LParam of
          1: begin // действие 1
