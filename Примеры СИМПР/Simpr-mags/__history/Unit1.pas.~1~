procedure TForm1.WndProc(var Message: TMessage);
var res:boolean;
    dmg:integer;
begin
  Randomize;
  if message.Msg=msgSIMPR then
   begin
    //ПОЛУЧИЛИ СООБЩЕНИЕ!!!!!!!!!!
    Res:=false;

    if message.WParamHi=0 then
    begin
     //УСЛОВИЕ!!!!!!!!!!
     case message.WParamLo of
      //таблица1
      1 : begin
      Memo1.Lines.Add('Табл. 1');
      case message.LParam of
            1: begin // условие 1
                if(ss1) then Res:=true;
                Memo1.Lines.Add('Усл. 1 : ' + BoolToStr(Res));
               end;
            2: begin // условие 2
                if(ss2) then Res:=true;
                Memo1.Lines.Add('Усл. 2 : ' + BoolToStr(Res));
               end;
      end; {case}
      end;

      //таблица2
      2 : begin
      Memo1.Lines.Add('Табл. 2');
      case message.LParam of
            1: begin // условие 1
                if(RadioGroup1.ItemIndex=0) then Res:=true;
                Memo1.Lines.Add('Усл. 1 : ' + BoolToStr(Res));
               end;
            2: begin // условие 2
                if(RadioGroup1.ItemIndex=1) then Res:=true;
                Memo1.Lines.Add('Усл. 2 : ' + BoolToStr(Res));
               end;
            3: begin // условие 3
                if(RadioGroup1.ItemIndex=2) then Res:=true;
                Memo1.Lines.Add('Усл. 3 : ' + BoolToStr(Res));
               end;
      end; {case}
      end;

      //таблица3
      3 : begin
      Memo1.Lines.Add('Табл. 3');
      case message.LParam of
            1: begin // условие 1
                if(StrToInt(Edit1.Text)>666) then Res:=true;
                Memo1.Lines.Add('Усл. 1 : ' + BoolToStr(Res));
               end;
            2: begin // условие 2
                if(StrToInt(Edit1.Text)>333)and(StrToInt(Edit1.Text)<667) then Res:=true;
                Memo1.Lines.Add('Усл. 2 : ' + BoolToStr(Res));
               end;
            3: begin // условие 3
                if(StrToInt(Edit1.Text)<334)and(StrToInt(Edit1.Text)>0) then Res:=true;
                Memo1.Lines.Add('Усл. 3 : ' + BoolToStr(Res));
               end;
            4: begin // условие 4
                if(StrToInt(Edit2.Text)>666) then Res:=true;
                Memo1.Lines.Add('Усл. 4 : ' + BoolToStr(Res));
               end;
            5: begin // условие 5
                if(StrToInt(Edit2.Text)>333)and(StrToInt(Edit2.Text)<667) then Res:=true;
                Memo1.Lines.Add('Усл. 5 : ' + BoolToStr(Res));
               end;
            6: begin // условие 6
                if(StrToInt(Edit2.Text)<334)and(StrToInt(Edit2.Text)>0) then Res:=true;
                Memo1.Lines.Add('Усл. 6 : ' + BoolToStr(Res));
               end;
            7: begin // условие 7
                if(StrToInt(Edit1.Text)=0) then Res:=true;
                Memo1.Lines.Add('Усл. 7 : ' + BoolToStr(Res));
               end;
            8: begin // условие 8
                if(StrToInt(Edit2.Text)=0) then Res:=true;
                Memo1.Lines.Add('Усл. 8 : ' + BoolToStr(Res));
               end;
      end; {case}
      end;

      //таблица4
      4 : begin
      Memo1.Lines.Add('Табл. 4');
      case message.LParam of
            1: begin // условие 1
                if(StrToInt(Edit1.Text)>666) then Res:=true;
                Memo1.Lines.Add('Усл. 1 : ' + BoolToStr(Res));
               end;
            2: begin // условие 2
                if(StrToInt(Edit1.Text)>333)and(StrToInt(Edit1.Text)<667) then Res:=true;
                Memo1.Lines.Add('Усл. 2 : ' + BoolToStr(Res));
               end;
            3: begin // условие 3
                if(StrToInt(Edit1.Text)<334)and(StrToInt(Edit1.Text)>0) then Res:=true;
                Memo1.Lines.Add('Усл. 3 : ' + BoolToStr(Res));
               end;
            4: begin // условие 4
                if((random(99)+1) < 33 ) then Res:=true;
                Memo1.Lines.Add('Усл. 4 : ' + BoolToStr(Res));
               end;
            5: begin // условие 5
                if(StrToInt(Edit1.Text)=0) then Res:=true;
                Memo1.Lines.Add('Усл. 5 : ' + BoolToStr(Res));
               end;
            6: begin // условие 6
                if(StrToInt(Edit2.Text)=0) then Res:=true;
                Memo1.Lines.Add('Усл. 6 : ' + BoolToStr(Res));
               end;
      end; {case}
      end;

      //таблица5
      5 : begin
      Memo1.Lines.Add('Табл. 5');
      case message.LParam of
            1: begin // условие 1
                if(StrToInt(Edit1.Text)>666) then Res:=true;
                Memo1.Lines.Add('Усл. 1 : ' + BoolToStr(Res));
               end;
            2: begin // условие 2
                if(StrToInt(Edit1.Text)>333)and(StrToInt(Edit1.Text)<667) then Res:=true;
