              pr_vamp;
              dmg:=100+random(50);
              if (StrToInt(Edit2.Text) < dmg) then Edit2.Text:='0'
              else Edit2.Text:=IntToStr(StrToInt(Edit2.Text)-dmg);
              Edit1.Text:=IntToStr(StrToInt(Edit1.Text)+round(dmg/2));
              pr_mag11;
             end;
          3: begin // действие 3
              pr_mag12;
              pr_kdl;
              dmg:=100+400-StrToInt(Edit1.Text);
              if (StrToInt(Edit2.Text) < dmg) then Edit2.Text:='0'
              else Edit2.Text:=IntToStr(StrToInt(Edit2.Text)-dmg);
              pr_mag11;
             end;
          4: begin // действие 4
              pr_mag22;
              pr_mag1hur;
              dmg:=100+random(50);
              if (StrToInt(Edit1.Text) < dmg) then Edit1.Text:='0'
              else Edit1.Text:=IntToStr(StrToInt(Edit1.Text)-dmg);
              pr_mag21;
             end;
          5: begin // действие 5
              pr_mag22;
              pr_mag1vamp;
              dmg:=100+random(50);
              if (StrToInt(Edit1.Text) < dmg) then Edit1.Text:='0'
              else Edit1.Text:=IntToStr(StrToInt(Edit1.Text)-dmg);
              Edit2.Text:=IntToStr(StrToInt(Edit2.Text)+round(dmg/2));
              pr_mag21;
             end;
          6: begin // действие 6
              pr_mag22;
              pr_mag1kdl;
              dmg:=100+400-StrToInt(Edit2.Text);
              if (StrToInt(Edit1.Text) < dmg) then Edit1.Text:='0'
              else Edit1.Text:=IntToStr(StrToInt(Edit1.Text)-dmg);
              pr_mag21;
             end;
          7: begin // действие 7
              Edit3.Text:='Победа игрока 2';
              form1.mag11.Visible:=false;
              delay(3000);
              Edit3.Text:='';
              form1.mag21.Visible:=false;
              ss1:=true;
              ss2:=false;
             end;
          8: begin // действие 8
              Edit3.Text:='Победа игрока 1';
              form1.mag21.Visible:=false;
              delay(3000);
              Edit3.Text:='';
              form1.mag11.Visible:=false;
              ss1:=true;
              ss2:=false;
