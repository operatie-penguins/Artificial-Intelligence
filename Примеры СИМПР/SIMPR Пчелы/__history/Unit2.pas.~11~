unit Unit2;

interface

uses
  ExtCtrls;

type
  Bee = class
  private
  public
    State: Integer; //(0 - в улее; 1 - летит к цветку; 2 - летит в улей; 3 - собирает пыльцу)
    IsWithHoney: Boolean;
    Flower: Integer; //номер цветка, 0 - не находится на цветке
    X: Integer;
    Y: Integer;
    image: TImage;
  private
  end;

  Flower = class
  private
  public
    IsWithPollen: Boolean;
    IsWithBee: Boolean;
    X: Integer;
    Y: Integer;
    image: TImage;
  end;

implementation

end.
